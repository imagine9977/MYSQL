create sequence mem_seq increment by 1 start with 1 minvalue 1 maxvalue 9999 nocycle;
create table book( 
        bookid INT primary key, 
        bookkind varchar(10) not null, 
		booktitle varchar(50) not null,
        bookprice INT not null, 
        bookcount INT not null,
        author varchar(40), 
        pubcom varchar(40), 
        pubdate timestamp);
        
desc book;
commit;
select * from book;
