--sales는 행위 테이블이여야 한다. 
create sequence b_seq increment by 1 start with 1 minvalue 1 maxvalue 9999 nocycle;
create table sales( 
        sno INT primary key, 
        bno INT not null, 
        id varchar(12) not null, 

        amount INT DEFAULT 1 not null, --not null은 마지막에 와야 한다
        money INT,
        salesday timestamp DEFAULT sysdate);
--drop table sales;     
desc sales;
commit;
--번외: Insert into sales values(b_seq.nextval, 1, 'bgh',1,null,sysdate );
